<h1><%= @summary.name %></h1>

<% if policy(@summary).update? %>
<%= link_to "Edit Summary", edit_summary_path, class: 'btn btn-success' %>
<% end %>

<div class="row">
	<div class="col-md-8">
		<p class="lead"><%= @summary.name %></p>
		<%= link_to @post.title %>
			<div class="media">
			<div class="media-body">
					<%= @summary.description %>
				<small>
					submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.name %><br/>
					<%= @post.comments.count %> Comments
				</small>
			</div>
		</div>
	</div>
	<div class="col-md-4">
		<% if policy(Post.new).create? %>
		<%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
		<% end %>
	</div>
</div>