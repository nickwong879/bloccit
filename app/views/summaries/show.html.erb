<h1><%= @summary.name %></h1>

<% if policy(@summary).update? %>
<%= link_to "Edit Summary", edit_summary_path, class: 'btn btn-success' %>
<% end %>

<div class="row">
	<div class="col-md-8">
		<p class="lead"><%= @summary.name %></p>
		<% @post %>
		<div class="media">
			<div class="media-body">
				<h4 class="media-heading">
					<%= link_to @summary.name, [@summary, @post] %>
				</h4>
				
			</div>
		</div>
	</div>
</div>