	<%= form_for [@post, @post.comments.build], remote: true do |f| %>
		<% if comment.errors.any? %>
			<div class="alert alert-danger">
				<h4>There are <%= pluralize(comment.errors.count, "error") %> errors.</h4>
				<ul>
					<% comment.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
				</ul>
			</div>
		<% end %>
		<%= form_group_tag(comment.errors[:body]) do %>
			
			<%= f.text_field :body, class: 'form-control', placeholder: "Enter your comment here" %>
		<% end %>

		<div class="form-group">
			<%= f.submit "Add comment", class: 'btn btn-success' %>
		</div>
	<% end %>